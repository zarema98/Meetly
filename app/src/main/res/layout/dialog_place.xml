<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txtNamePlace"
        android:textColor="@color/colorPrimaryDark"
        android:text="Введите название заведения"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:hint="Название заведения"
        android:ems="10"
        android:id="@+id/inputNamePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txtAddressPlace"
        android:textColor="@color/colorPrimaryDark"
        android:text="Введите адрес заведения"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:hint="Адрес заедения"
        android:ems="10"
        android:id="@+id/inputAddressPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnOk"
        android:background="@drawable/buttonshape"
        android:text="ОК"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorProjectTextWhite"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>