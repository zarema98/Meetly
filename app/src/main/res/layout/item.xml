<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="140dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMeet"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/meetly_background"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp" />



        <TextView
            android:id="@+id/nameMeet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="19dp"
            android:text="Название встречи "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignTop="@+id/imgMeet"
            android:layout_toRightOf="@+id/imgMeet"
            />

        <TextView
            android:id="@+id/descriptionMeet"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Описание встречи"
            android:textSize="16sp"
            android:layout_below="@+id/nameMeet"
            android:layout_alignLeft="@+id/nameMeet"
            android:layout_alignStart="@+id/nameMeet" />

    <TextView
        android:id="@+id/dataMeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionMeet"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="5dp"
        android:text="00:00 01 января 2018"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/imgMeet"
        android:layout_alignLeft="@+id/imgMeet"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>